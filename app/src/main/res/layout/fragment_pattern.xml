<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:id="@+id/patternBottomSheet"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:background="#9da8fe">

    <LinearLayout
            android:id="@+id/subLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:orientation="vertical"
            android:background="#9da8fe"
            android:paddingBottom="5dp">

        <!-- Second Layout -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background3">

                <TextView
                        android:id="@+id/titleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="간편로그인 패턴입력"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/messageView"
                        android:layout_width="384dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="패턴을 입력하세요."
                        android:textColor="#FE8418"
                        android:textSize="15sp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/messageView"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal">

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    <com.andrognito.patternlockview.PatternLockView
                            android:id="@+id/patternLockView"
                            android:layout_width="0dp"
                            android:layout_height="360dp"
                            android:layout_weight="4"
                            app:dotCount="4"
                            app:dotNormalSize="32dp"
                            app:dotSelectedSize="72dp"
                            app:pathWidth="10dp"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/buttonLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/closeButton"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:layout_width="180dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="#577ef3"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:contentPadding="8dp"
                            app:rippleColor="#FFFFFF"
                            android:clickable="true">

                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                        >

                            <TextView
                                    android:id="@+id/closeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="닫  기"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                    android:textColor="@android:color/white"
                                    android:textSize="24sp"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>